<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.project.danyaapp.SettingsActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3721C4" />

    <TextView
        android:text="Ваша группа: Отстуствует"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_textView_group"
        android:textSize="19sp"
        android:layout_below="@+id/toolbar1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"
        />

    <Button
        android:text="ВЫБРАТЬ ГРУППУ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button_select_group"
        android:layout_below="@+id/settings_textView_group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Обновить расписание"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_button_select_group"
        android:layout_alignLeft="@+id/settings_textView_group"
        android:layout_alignStart="@+id/settings_textView_group"
        android:id="@+id/settings_button_update"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
